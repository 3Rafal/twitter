FROM mcr.microsoft.com/dotnet/sdk:9.0-alpine AS dev

# Install curl for health checks and other tools
RUN apk add --no-cache curl

# Install Entity Framework Core tools
RUN dotnet tool install --global dotnet-ef
ENV PATH="$PATH:/root/.dotnet/tools"

# Set working directory
WORKDIR /app

# Copy csproj and restore as distinct layers
COPY TwitterClone.Api.csproj ./
RUN dotnet restore TwitterClone.Api.csproj

# Copy everything else and build
COPY . .
RUN dotnet build TwitterClone.Api.csproj

# Expose port
EXPOSE 8080
EXPOSE 8081

# Use the entrypoint script for development
ENTRYPOINT ["dotnet", "watch", "run", "--urls", "http://0.0.0.0:8080"]